<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotesApp.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout>
        <Image 
            x:Name="PerfilFoto"
            Source="eu.jpg" 
            Aspect="AspectFit"
            HeightRequest="250"/>

        <Label
            Text="Projeto criado na aula PAM"/>

        <Button
            x:Name="PerfilButton"
            Text="Visitar Perfil" 
            Clicked="PerfilButton_Clicked"/>
    </VerticalStackLayout>
</ContentPage>